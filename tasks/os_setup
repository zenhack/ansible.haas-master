---
- name: Make sure the EPEL repository is enabled.
  yum: state=present name=epel-release
- name: Install rpm dependencies and development tools of the HaaS.
  yum: name={{ item }} state=present
  with_items:
    - libvirt
    - libvirt-client
    - python-virtinst
    - vconfig
    - bridge-utils
    - telnet
    - qemu-kvm
    - httpd
    - mod_wsgi
    - gcc
    - git
    - python-virtualenv
    - python-pip
- service: name=libvirtd state=started enabled=yes
- service: name=httpd state=started enabled=yes
- name: Create the haas user.
  user: name=haas system=yes home=/var/lib/haas
